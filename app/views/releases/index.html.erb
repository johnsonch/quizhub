<h3>Listing releases</h3>

<table>
  <tr>
    <th><span class="secondary radius label">Quiz</span</th>
    <th><span class="secondary radius label">Release date</span></th>
    <th><span class="secondary radius label">Due date</span></th>
    <th><span class="secondary radius label">Active</span></th>
    <th><span class="secondary radius label">Released by</span></th>
    <th colspan="3"><span class="secondary radius label">Actions</span></th>
  </tr>

<% @releases.each do |release| %>
  <tr>
    <td rowspan="2"><%= release.quiz_id %></td>
    <td colspan="7"><span class="radius label"><%= Quiz.find(release.quiz_id.to_i).name %></span></td>
  </tr><tr>
    <td><%= release.release_date %></td>
    <td><%= release.due_date %></td>
    <td><%= release.active ? "Yes" : "No" %></td>
    <td><%= User.find(release.released_by.to_i).username %></td>
    <td><%= link_to 'Show', release %><i class="general foundicon-idea"></td>
    <td><%= link_to 'Edit', edit_release_path(release) %><i class="general foundicon-edit"></td>
    <td><%= link_to 'Delete', release, method: :delete, data: { confirm: 'Are you sure?' } %><i class="general foundicon-remove"></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Release', new_release_path, :class => "tiny radius button" %>
