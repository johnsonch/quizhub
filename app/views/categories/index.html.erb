<h3>Categories</h3>

<table>
  <tr>
    <th>Category Name</th>
    <th></th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.name %></td>
    <td><%= link_to 'Edit', edit_category_path(category) %><i class="foundicon-edit"></td>
    <td><%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' } %><i class="foundicon-remove"></td>
  </tr>
<% end %>
</table>

